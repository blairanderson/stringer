= div_for story do
  .col-xs-12.col-lg-2
    %button.btn-primary.btn-block Icons
    %button.btn-primary.btn-block Actions
  .col-xs-12.col-lg-10
    .panel.panel-default
      .panel-heading
        .row
          .col-xs-12.col-md-8
            %strong= story.lead
          .col-xs-12.col-md-4
            = link_to "Tweed It!", story, class: "btn btn-primary btn-block"
      .panel-body
        %p.lead
          = story.body.html_safe
